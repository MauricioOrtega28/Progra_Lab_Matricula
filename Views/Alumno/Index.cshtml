@model Progra_Lab_Matricula.Models.Alumno


<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Formulario de matricula de alumno</h1>
    
    <form asp-controller="Alumno" asp-action="Create">
        
        <label asp-for="Apellidos" class="form-label"></label>
        <input asp-for="Apellidos" class="form-control form-control-sm" type="text" placeholder="Escriba sus apellidos" aria-label=".form-control-sm" />

        <label asp-for="Nombres" class="control-label"></label>
        <input asp-for="Nombres" class="form-control form-control-sm" type="text" placeholder="Escriba sus nombres" aria-label=".form-control-sm"/>

        <div>
            <label asp-for="Fecha_Nacimiento" class="control-label"></label>
            <input asp-for="Fecha_Nacimiento" class="form-control form-control-sm" type="text" placeholder="Escriba su fecha de nacimiento" aria-label=".form-control-sm"/>
        </div>
        
        <div>
            Masculino
            <input asp-for="Genero" class="form-control form-control-sm" type="radio"value="M"/>
            Femenino
            <input asp-for="Genero" class="form-control" type="radio"value="F"/>
        </div>
       
        <div>
            <select name="Carrera" class="form-select" aria-label="Default select example">
                <option selected disabled>Seleccione carrera</option>
                <option value="S">Ingenieria de computacion y sistemas</option>
                <option value="C">Ingenieria civil</option>
                <option value="A">Arquitectura</option>
                <option value="I">Ingenieria industrial</option>
                <option value="AE">Ciencias Aeronauticas</option>
            </select>
        </div>
        

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Registrar</button> 
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>
</div>